{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rivet",
  "scopeName": "source.rivet",
  "patterns": [
    { "include": "#comments" },
    { "include": "#function-definition" },
    { "include": "#keywords" },
    { "include": "#declarations" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#constants" },
    { "include": "#properties" },
    { "include": "#operators" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "match": "\\b(if|else|return|do|while|for|request|publish|transition|start|stop)\\b",
          "name": "keyword.control.rivet"
        },
        {
          "match": "\\b(node|mode|systemMode|topic|system)\\b",
          "name": "storage.type.rivet"
        }
      ]
    },
    "function-definition": {
      "match": "\\b(func|onRequest|onListen)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "storage.type.function.rivet" },
        "2": { "name": "entity.name.function.rivet" }
      }
    },
    "declarations": {
      "match": "\\b(topic|node)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "storage.type.rivet" },
        "2": { "name": "variable.other.rivet" }
      }
    },
    "properties": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\.)",
      "name": "variable.other.object.rivet"
    },
    "types": {
      "patterns": [
        { "match": "\\b(int|float|string|bool|void)\\b", "name": "support.type.primitive.rivet" },
        { "match": "\\b[A-Z][a-zA-Z0-9_]*\\b", "name": "support.class.rivet" }
      ]
    },
    "comments": {
      "patterns": [
        { "match": "//.*$", "name": "comment.line.double-slash.rivet" },
        { "begin": "/\\*", "end": "\\*/", "name": "comment.block.rivet" }
      ]
    },
    "strings": {
      "name": "string.quoted.double.rivet",
      "begin": "\"",
      "end": "\"",
      "patterns": [ { "match": "\\\\.", "name": "constant.character.escape.rivet" } ]
    },
    "constants": {
      "patterns": [
        { "match": "\\b\\d+(\\.\\d+)?\\b", "name": "constant.numeric.rivet" },
        { "match": "\\b(true|false)\\b", "name": "constant.language.boolean.rivet" }
      ]
    },
    "operators": {
      "patterns": [
        { "match": "->|=", "name": "keyword.operator.rivet" },
        { "match": "\\{|\\}", "name": "punctuation.section.block.rivet" }
      ]
    }
  }
}